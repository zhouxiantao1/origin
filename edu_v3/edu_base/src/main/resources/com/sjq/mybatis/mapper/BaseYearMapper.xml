<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sjq.year.dao.BaseYearMapper">
	<resultMap id="BaseResultMap" type="com.sjq.year.vo.BaseYearVo">
  		<result column="id" property="id" jdbcType="BIGINT" />
  		<result column="create_name" property="createName" jdbcType="VARCHAR" />
  		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
  		<result column="mod_name" property="modName" jdbcType="VARCHAR" />
  		<result column="mod_time" property="modTime" jdbcType="TIMESTAMP" />
  		<result column="delflag" property="delflag" jdbcType="CHAR" />
  		<result column="name" property="name" jdbcType="VARCHAR" />
  		<result column="parent_id" property="parentId" jdbcType="VARCHAR" />
  		<result column="parent_ids" property="parentIds" jdbcType="VARCHAR" />
  		<result column="sort" property="sort" jdbcType="BIGINT" />
  		<result column="level" property="level" jdbcType="BIGINT" />
	</resultMap>
	
	<sql id="Base_Column_List">
  		id,
  		create_name,
  		create_time,
  		mod_name,
  		mod_time,
  		delflag,
  		name,
  		parent_id,
  		parent_ids,
  		sort,
  		level
	</sql>
	
	<!-- 查询所有的基础模块-年份信息信息 -->
	<select id="queryAllBaseYear" resultMap="BaseResultMap" >
 	   select 
       <include refid="Base_Column_List" />
       from edu_base_year
       where delflag='0'
    </select>
	
	
	<!-- 根据ID查询基础模块-年份信息信息 -->
	<select id="queryBaseYearById" resultMap="BaseResultMap" parameterType="java.lang.Long">
	   select 
       <include refid="Base_Column_List" />
       from edu_base_year
       where delflag='0' and id =#{id,jdbcType=BIGINT}
    </select>
    
    
	<!-- 根据IDS查询所有基础模块-年份信息信息 -->
	<select id="queryBaseYearByIds" resultMap="BaseResultMap"  parameterType="java.util.Map">
	   select 
       <include refid="Base_Column_List" />
       from edu_base_year
       where delflag='0' and id in 
	   <foreach collection="Ids" item="id" open="(" close=")" separator=",">
	   #{id}
	   </foreach>
	</select>     
	
					
	<!-- 根据条件查询所有基础模块-年份信息信息 -->
	<select id="queryBaseYearBySearch" resultMap="BaseResultMap"  parameterType="java.util.Map">
	   select 
       <include refid="Base_Column_List" />
       from edu_base_year
       where 1=1 
  	   <if test="id != '' and id != null">
       		and id = #{id}
       </if>
  	   <if test="createName != '' and createName != null">
       		and create_name = #{createName}
       </if>
  	   <if test="createTime != '' and createTime != null">
       		and create_time = #{createTime}
       </if>
  	   <if test="modName != '' and modName != null">
       		and mod_name = #{modName}
       </if>
  	   <if test="modTime != '' and modTime != null">
       		and mod_time = #{modTime}
       </if>
  	     	and delflag = '0'
  	   <if test="name != '' and name != null">
       		and name = #{name}
       </if>
  	   <if test="parentId != '' and parentId != null">
       		and parent_id = #{parentId}
       </if>
  	   <if test="parentIds != '' and parentIds != null">
       		and parent_ids = #{parentIds}
       </if>
  	   <if test="sort != '' and sort != null">
       		and sort = #{sort}
       </if>
  	   <if test="level != '' and level != null">
       		and level = #{level}
       </if>
	</select>
	
					
	<!-- 分页查询基础模块-年份信息 -->
	<select id="queryBaseYearPage" resultMap="BaseResultMap"  parameterType="java.util.Map">
		select   
	    <include refid="Base_Column_List" />
		from
		edu_base_year where delflag='0'
  	   <if test="id != '' and id != null">
       		and id =  #{id}
       </if>
  	   <if test="createName != '' and createName != null">
       		and create_name =  #{createName}
       </if>
  	   <if test="createTime != '' and createTime != null">
       		and create_time =  #{createTime}
       </if>
  	   <if test="modName != '' and modName != null">
       		and mod_name =  #{modName}
       </if>
  	   <if test="modTime != '' and modTime != null">
       		and mod_time =  #{modTime}
       </if>
  	   <if test="delflag != '' and delflag != null">
       		and delflag =  #{delflag}
       </if>
  	   <if test="name != '' and name != null">
       		and name =  #{name}
       </if>
  	   <if test="parentId != '' and parentId != null">
       		and parent_id =  #{parentId}
       </if>
  	   <if test="parentIds != '' and parentIds != null">
       		and parent_ids =  #{parentIds}
       </if>
  	   <if test="sort != '' and sort != null">
       		and sort =  #{sort}
       </if>
  	   <if test="level != '' and level != null">
       		and level =  #{level}
       </if>
  	   limit #{startRowNum},#{endRowNum}
	</select>

					
	<!-- (删除)根据ID删除基础模块-年份信息信息 --> 
	<delete id="deleteBaseYearById" parameterType="java.lang.Long">
		update edu_base_year 
		<set> 
	  	    <if test="modName != '' and modName != null">
	       	mod_name =  #{modName,jdbcType=VARCHAR},
	        </if>
	  	    <if test="modTime != '' and modTime != null">
	       	mod_time =  #{modTime,jdbcType=TIMESTAMP},
	        </if>
		delflag = '1'
		</set>
		where  id = #{id,jdbcType=BIGINT} 
	</delete>
	
					
	<!-- (删除)根据IDS删除基础模块-年份信息信息 -->
	<delete id="deleteBaseYearByIds"  parameterType="java.util.Map">
	   update 
       edu_base_year
       <set> 
	  	    <if test="bean.modName != '' and bean.modName != null">
	       	mod_name =  #{bean.modName,jdbcType=VARCHAR},
	        </if>
	  	    <if test="bean.modTime != '' and bean.modTime != null">
	       	mod_time =  #{bean.modTime,jdbcType=TIMESTAMP},
	        </if>
		delflag = '1'
		</set>
       where in 
	   <foreach collection="Ids" item="id" open="(" close=")" separator=",">
	   #{id}
	   </foreach>
	</delete>
	
					
	<!-- (更新)根据ID更新所有基础模块-年份信息信息 -->
	<update id="updateBaseYearById" parameterType="com.sjq.year.bean.BaseYearBean" >
		update edu_base_year
		<set>
	  	    <if test="modName != '' and modName != null">
	       	mod_name =  #{modName,jdbcType=VARCHAR},
	        </if>
	  	    <if test="modTime != '' and modTime != null">
	       	mod_time =  #{modTime,jdbcType=TIMESTAMP},
	        </if>
	  	    <if test="delflag != '' and delflag != null">
	       	delflag =  #{delflag,jdbcType=CHAR},
	        </if>
	  	    <if test="name != '' and name != null">
	       	name =  #{name,jdbcType=VARCHAR},
	        </if>
	  	    <if test="parentId != '' and parentId != null">
	       	parent_id =  #{parentId,jdbcType=VARCHAR},
	        </if>
	  	    <if test="parentIds != '' and parentIds != null">
	       	parent_ids =  #{parentIds,jdbcType=VARCHAR},
	        </if>
	  	    <if test="sort != '' and sort != null">
	       	sort =  #{sort,jdbcType=BIGINT},
	        </if>
	  	    <if test="level != '' and level != null">
	       	level =  #{level,jdbcType=BIGINT},
	        </if>
		</set>
		where 1 = 1 and id = #{id,jdbcType=BIGINT} 
	</update>
	
					
	<!-- 根据条件查询基础模块-年份信息count总数 -->
	<select id="queryBaseYearTotalCount" parameterType="java.util.Map" resultType="java.lang.Integer">
		select count(1) from
		edu_base_year where delflag='0'
  	   <if test="id != '' and id != null">
       		and id =  #{id}
       </if>
  	   <if test="createName != '' and createName != null">
       		and create_name =  #{createName}
       </if>
  	   <if test="createTime != '' and createTime != null">
       		and create_time =  #{createTime}
       </if>
  	   <if test="modName != '' and modName != null">
       		and mod_name =  #{modName}
       </if>
  	   <if test="modTime != '' and modTime != null">
       		and mod_time =  #{modTime}
       </if>
  	   <if test="delflag != '' and delflag != null">
       		and delflag =  #{delflag}
       </if>
  	   <if test="name != '' and name != null">
       		and name =  #{name}
       </if>
  	   <if test="parentId != '' and parentId != null">
       		and parent_id =  #{parentId}
       </if>
  	   <if test="parentIds != '' and parentIds != null">
       		and parent_ids =  #{parentIds}
       </if>
  	   <if test="sort != '' and sort != null">
       		and sort =  #{sort}
       </if>
  	   <if test="level != '' and level != null">
       		and level =  #{level}
       </if>
	</select>
	

    
	   
</mapper>